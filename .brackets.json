{
    "jslint.options": {
        "indent": 4,
        "vars": true,
        "plusplus": true,
        "devel": true,
        "nomen": true,
        "maxerr": 50,
        "es5": true
    },
    "defaultExtension": "js",
    "language": {
        "javascript": {
            "linting.prefer": ["JSLint", "JSHint"],
            "linting.usePreferredOnly": true
        }
    },
    "spaceUnits": 4,
    "useTabChar": false
}
